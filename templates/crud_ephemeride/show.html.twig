{% extends 'base.html.twig' %}

{% block title %}Éphémeride{% endblock %}

{% block body %}
<section>
    <div class="container mt-5">
        <div class="row">
            <span class="d-flex justify-content-center">
                <h1 class="text-center pb-4 mx-4 text-primary my-4">Éphémeride</h1>
            </span>
            <table class="table col-md-4 mt-1 mb-5">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ ephemeride.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ ephemeride.titre }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ ephemeride.description }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>{{ ephemeride.image }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ ephemeride.slug }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_crud_ephemeride_index') }}" class="btn btn-primary mb-1">Retour à la liste</a>

            <a href="{{ path('app_crud_ephemeride_edit', {'id': ephemeride.id}) }}"
                class="btn btn-success mb-1">Modifier</a>

            <span class="btn btn-danger active float-end mb-1">{{ include('crud_ephemeride/_delete_form.html.twig')
                }}</span>

        </div>
        <hr>
    </div>
</section>
{% endblock %}
