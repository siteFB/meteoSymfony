{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<section class="container mb-3">
    <div class="row">
        <div class="col">
            <h1 class="text-center pb-4 mx-4 text-primary my-4">Inscription</h1>

            {{ form_start(registrationForm) }}
            <fieldset class="mb-3">
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.pseudo) }}
            </fieldset>
            {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.RGPDConsent) }}
            {{ form_row(registrationForm.slug) }}
            <button type="submit" class="btn btn-primary my-3">M'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</section>

{% endblock %}

